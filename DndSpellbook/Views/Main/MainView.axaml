<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:reactiveUi="http://reactiveui.net"
             xmlns:views="clr-namespace:DndSpellbook.Views"
             xmlns:dndSpellbook="clr-namespace:DndSpellbook"
             xmlns:dialogHostAvalonia="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="views:MainViewModel"
             x:Class="DndSpellbook.Views.MainView">
    <UserControl.Styles>
        <Style Selector="Button.sidebar-button">
            <Setter Property="CornerRadius" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        
        <Style Selector="Button.sidebar-button:disabled > ContentPresenter">
            <Setter Property="Foreground" Value="DarkGray" />
        </Style>

        <Style Selector="Button.sidebar-button > ContentPresenter">
            <Style.Animations>
                <Animation Duration="0:0:1" IterationCount="1">
                    <KeyFrame Cue="0%">
                        <Setter Property="Background" Value="{StaticResource Color4}" />
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Background" Value="#00000000" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
        
        <Style Selector="Button.sidebar-button:pointerover > ContentPresenter">
            <Setter Property="Background" Value="{StaticResource Color4}" />
        </Style>

        <Style Selector="Button.sidebar-button:pointerover > ContentPresenter">
            <Setter Property="Foreground" Value="Black" />
        </Style>
    </UserControl.Styles>

    <Grid ColumnDefinitions="200,*">
        <StackPanel Grid.Column="0" Background="{StaticResource Color1}" Orientation="Vertical">
            <StackPanel Margin="5,5,5,20">
                <Image Margin="10" Source="/Assets/dndspellbook_icon.png" Stretch="Uniform" Width="128" Height="128"/>
                <TextBlock Text="Spellbook" FontSize="22" Foreground="{StaticResource Color4}" FontWeight="DemiBold" HorizontalAlignment="Center"/>
            </StackPanel>
            
            <Button Classes="sidebar-button" Command="{Binding NavigateCommand}" CommandParameter="spells"
                    Content="Spells"/>
            <Button Classes="sidebar-button" Command="{Binding NavigateCommand}" CommandParameter="characters"
                    Content="Characters" />
            <Button Classes="sidebar-button" Command="{Binding NavigateCommand}" CommandParameter="spelllists"
                    Content="Spell Lists" />
        </StackPanel>

        <reactiveUi:RoutedViewHost Grid.Column="1" Router="{Binding Router}" PageTransition="{x:Null}" Background="{StaticResource Color2}">
            <reactiveUi:RoutedViewHost.DefaultContent>
                <TextBlock Text="Default content"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
            </reactiveUi:RoutedViewHost.DefaultContent>
            <reactiveUi:RoutedViewHost.ViewLocator>
                <dndSpellbook:ViewLocator />
            </reactiveUi:RoutedViewHost.ViewLocator>
        </reactiveUi:RoutedViewHost>
    </Grid>
</UserControl>