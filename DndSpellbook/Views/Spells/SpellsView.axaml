<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:DndSpellbook.Data.Models"
             xmlns:views="clr-namespace:DndSpellbook.Views"
             xmlns:controls="clr-namespace:DndSpellbook.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="views:SpellsViewModel"
             x:Class="DndSpellbook.Views.SpellsView">
    <UserControl.DataTemplates>
        <DataTemplate DataType="{x:Type controls:SpellCardViewModel}">
            <controls:SpellCard DataContext="{Binding}" Margin="15" />
        </DataTemplate>
    </UserControl.DataTemplates>

    <Grid RowDefinitions="Auto,*">
        <StackPanel Grid.Row="0" Orientation="Vertical" Background="{StaticResource Color5}">
            <StackPanel Orientation="Horizontal">
                <StackPanel.Styles>
                    <Style Selector="Button">
                        <Setter Property="Foreground" Value="Black" />
                    </Style>
                </StackPanel.Styles>

                <Button Margin="0 5" Command="{Binding NewSpellCommand}" Content="New" />
                <Button Command="{Binding ImportSpellsCommand}" Content="Import" />
                <Button Command="{Binding ClearSpellsCommand}" Content="Delete all" />
                <Button IsVisible="{Binding IsSelector}" Command="{Binding SaveCommand}"
                        Content="Add Spells" />
                <Button IsVisible="{Binding IsSelector}" Foreground="White" Command="{Binding CancelCommand}"
                        Content="Cancel" />
            </StackPanel>

            <Separator />

            <StackPanel Orientation="Horizontal" Margin="10" Spacing="10">
                <StackPanel.Styles>
                    <Style Selector="Label">
                        <Setter Property="FontSize" Value="12" />
                        <Setter Property="Foreground" Value="Black" />
                    </Style>
                </StackPanel.Styles>

                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Vertical">
                        <Label Content="Search" />
                        <TextBox Text="{Binding FilterText}" Width="400" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <StackPanel Orientation="Vertical">
                            <Label Content="Page Size" />
                            <ComboBox SelectedValue="{Binding PageRequest.Size}" ItemsSource="{Binding PageSizes}" />
                        </StackPanel>

                        <CheckBox VerticalAlignment="Bottom" IsChecked="{Binding IsCardView}" Content="Cards" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Vertical">
                        <Label Content="Min Level" />
                        <ComboBox SelectedValue="{Binding FilterMinLevel}"
                                  ItemsSource="{Binding Levels}"
                                  Width="70" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <Label Content="Max Level" />
                        <ComboBox SelectedValue="{Binding FilterMaxLevel}"
                                  ItemsSource="{Binding Levels}"
                                  Width="70" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Vertical">
                        <Label Content="School" />
                        <ComboBox SelectedValue="{Binding FilterSchool}" ItemsSource="{Binding SpellSchools}"
                                  Width="180" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <Label Content="Spell List" />
                        <ComboBox SelectedValue="{Binding FilterSpellList}" ItemsSource="{Binding SpellListsWithNull}"
                                  DisplayMemberBinding="{Binding Name}"
                                  Width="180" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <ItemsControl IsVisible="{Binding IsCardView}" ItemsSource="{Binding Spells.View}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

                <StackPanel IsVisible="{Binding !IsCardView}" Orientation="Vertical">
                    <ItemsControl ItemsSource="{Binding Spells.View}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="Auto,*">
                                    <CheckBox Grid.Column="0" IsVisible="{Binding IsSelector}"
                                              IsChecked="{Binding IsSelected}" />
                                    <Expander Grid.Column="1" HorizontalAlignment="Stretch" Margin=" 0 3 10 3">
                                        <Expander.Header>
                                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                                <TextBlock Text="{Binding Spell.Name}"></TextBlock>
                                                <TextBlock Margin="5 0 " FontWeight="Bold" Text="{Binding Spell.Level}"></TextBlock>
                                            </StackPanel>
                                        </Expander.Header>
                                    </Expander>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>