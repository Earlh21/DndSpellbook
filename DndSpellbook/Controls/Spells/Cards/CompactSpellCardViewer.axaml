<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:DndSpellbook.Controls"
             xmlns:models="clr-namespace:DndSpellbook.Data.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DndSpellbook.Controls.CompactSpellCardViewer"
             x:Name="Root">
    <Border Width="300" Height="150" BorderBrush="Black" Background="#E0E0E0">
        <Panel>
            <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" Text="{Binding #Root.Spell.Level}" FontSize="16" />
            
            <Button VerticalAlignment="Top" HorizontalAlignment="Right"
                    Content="D"
                    IsVisible="{Binding #Root.DeleteCommand, Converter={x:Static ObjectConverters.IsNotNull}}"
                    Command="{Binding #Root.DeleteCommand}"/>
            
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical" Spacing="5" Margin="15">
                <Image Source="{Binding #Root.Spell.School, Converter={StaticResource SpellSchoolToIcon}}" Width="32" Height="32" />
                <TextBlock Text="{Binding #Root.Spell.Name}" FontSize="20" FontWeight="Bold" />
            </StackPanel>
        </Panel>
        
    </Border>
</UserControl>
