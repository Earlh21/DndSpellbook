<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:DndSpellbook.Views"
             xmlns:controls="clr-namespace:DndSpellbook.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DndSpellbook.Controls.SpellEntryRow"
             x:Name="Root">
    <UserControl.Styles>
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style Selector="Label">
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style Selector="ComboBox">
            <Setter Property="Foreground" Value="White" />
        </Style>
    </UserControl.Styles>

    <StackPanel Orientation="Horizontal" Spacing="5">
        <Image Width="32" Height="32"
               Source="{Binding #Root.SpellEntryEditor.Entry.Spell.School, Converter={StaticResource SpellSchoolToIcon}}" />
        <TextBlock Text="{Binding #Root.SpellEntryEditor.Entry.Spell.Level}" FontWeight="Bold"
                   Margin="0,0,5,0" />
        <TextBlock Text="{Binding #Root.SpellEntryEditor.Entry.Spell.Name}" Width="250" />
        <Button Content="Delete"
                Command="{Binding #Root.DeleteCommand}"
                CommandParameter="{Binding #Root.SpellEntryEditor}" />

        <CheckBox IsChecked="{Binding #Root.SpellEntryEditor.Entry.Prepared}" Content="Prepared" Foreground="White"/>

        <CheckBox IsChecked="{Binding #Root.SpellEntryEditor.Entry.Uses.SpellSlot}" Content="Spell Slot" Foreground="White" />
        <CheckBox IsChecked="{Binding #Root.SpellEntryEditor.RechargeIsChecked}" Content="Charges" Foreground="White"/>

        <StackPanel Orientation="Horizontal" IsVisible="{Binding #Root.SpellEntryEditor.RechargeIsChecked}">
            <Label Content="Recharge on:" />
            <ComboBox
                SelectedItem="{Binding #Root.SpellEntryEditor.Entry.Uses.Recharge.Type}"
                ItemsSource="{Binding #Root.SpellEntryEditor.RechargeTypes}" />
            <Label Content="Max Charges:" />
            <NumericUpDown ShowButtonSpinner="False"
                           Value="{Binding #Root.SpellEntryEditor.Entry.Uses.Recharge.MaxCharges}"
                           Minimum="0" ParsingNumberStyle="Integer" />
        </StackPanel>

        <ToolTip.Tip>
            <controls:SpellCardViewer Spell="{Binding #Root.SpellEntryEditor.Entry.Spell}" />
        </ToolTip.Tip>
    </StackPanel>
</UserControl>