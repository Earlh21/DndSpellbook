<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DndSpellbook.Controls.SpellSlotPips"
             x:Name="Root">
    <StackPanel Orientation="Horizontal">
        <Button x:Name="PipButton" Tapped="PipButton_OnTapped">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding #Root.Text}" />
                <StackPanel x:Name="PipsPanel" Orientation="Horizontal" />
            </StackPanel>
        </Button>

        <Grid VerticalAlignment="Stretch" RowDefinitions="*,*">
            <Button Grid.Row="0" x:Name="UpButton" Content="▲" Tapped="UpButton_OnTapped" />
            <Button Grid.Row="1" x:Name="DownButton" Content="▼" Tapped="DownButton_OnTapped" />
        </Grid>
    </StackPanel>
</UserControl>